<div class="row">
    <div class="col-md-12">
        <h2>All Categories</h2>
        <a href="/categories/add" class="btn btn-success pull-right" style="margin-bottom: 15px;">Add Category</a>
        <hr />

        {{#if categories}}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Category ID</th>
                        <th>Category Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each categories}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.category}}</td>
                        <td>
                            <a href="/categories/delete/{{this.id}}" class="btn btn-danger btn-sm">Remove</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{else}}
        <div class="text-center">
            <p><strong>No categories found. Please add some categories to display.</strong></p>
        </div>
        {{/if}}
    </div>
</div>
