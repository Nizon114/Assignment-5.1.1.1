<div class="row">
    <div class="col-md-12">
        <h2>All Blog Posts</h2>
        <a href="/posts/add" class="btn btn-success pull-right" style="margin-bottom: 15px;">Add Post</a>
        <hr />

        {{#if posts}}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Post Title</th>
                        <th>Date</th>
                        <th>Category</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each posts}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.title}}</td>
                        <td>{{this.postDate}}</td>
                        <td>
                            <a href="/posts?category={{this.category}}">{{this.category}}</a>
                        </td>
                        <td>{{#if this.published}}Yes{{else}}No{{/if}}</td>
                        <td>
                            <a href="/posts/delete/{{this.id}}" class="btn btn-danger btn-sm">Remove</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{else}}
        <div class="text-center">
            <p><strong>No posts available. Please add some posts to display here.</strong></p>
        </div>
        {{/if}}
    </div>
</div>
